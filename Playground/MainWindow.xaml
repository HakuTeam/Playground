<Window x:Class="Playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playground"
        mc:Ignorable="d"
        Title="Sound Wizard" Height="700"  Width="600" ResizeMode="NoResize" Icon="PlayerSkin\SoundWizard.ico">
    <Grid>

        <Grid Background="CornflowerBlue" Margin="-24,-100,-20,0" Height="771" VerticalAlignment="Bottom">
            <Grid.Resources>
                <SolidColorBrush x:Key="brownBrush" Color="Wheat"></SolidColorBrush>
            </Grid.Resources>
            <Button Name="OpenButton" Height="70" Width="70" Background="Azure" BorderThickness="5" BorderBrush="Black" Click="Open_Button_Click" Margin="63,146,485,382">Open</Button>
            <Button Width="70" Height="70"  Background="Azure" BorderBrush="Black" Margin="168,146,380,382">Rewind</Button>
            <Button Width="70" Height="70"  Background="Azure" BorderBrush="Black" Margin="269,146,279,382">Play / Pause</Button>
            <Button Width="70" Height="70" Background="Azure" BorderBrush="Black" Margin="377,146,171,382">Forward</Button>
            <Button Width="70" Height="70"  Background="Azure" BorderBrush="Black" Margin="481,146,67,382">Stop</Button>
        </Grid>
        <TextBox IsReadOnly="True" BorderThickness="5" FontFamily="Consolas" FontWeight="UltraBold" FontStyle="Italic" VerticalContentAlignment="Center" TextAlignment="Center" Background="Gold" FontSize="45" Margin="0,10,0,589">Sound Wizard</TextBox>
        <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" Name="Playlist" Margin="36,262,38,18" SelectionChanged="Playlist_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <MediaElement Height="120" Margin="10,10,108,0" LoadedBehavior="Manual" Name="mediaElement1" VerticalAlignment="Top" />
        </ListBox>
    </Grid>
</Window>
