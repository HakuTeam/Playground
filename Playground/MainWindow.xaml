<Window x:Class="Playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playground"
        mc:Ignorable="d"
        Title="Sound Wizard" Height="700"  Width="600" ResizeMode="NoResize" Icon="PlayerSkin\SoundWizard.ico">
    <Grid>
        <Grid Margin="-24,-100,-20,0" Height="771" VerticalAlignment="Bottom">
            <Grid.Background>
                <ImageBrush ImageSource="/PlayerSkin/bg.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <Button BorderThickness="0" Name="OpenButton" Height="70" Width="70" Background="Transparent" BorderBrush="Black" Click="Open_Button_Click" Margin="63,146,485,382" >
                <StackPanel>
                    <Image Source="/PlayerSkin/ButtonIcons/OpenSongsButtonIcon.png" />
                </StackPanel>
            </Button>
            <Button BorderThickness="0" Name="RewindButton" Width="70" Height="70"  Background="Transparent" BorderBrush="Black" Margin="168,146,380,382" Click="Rewind_Button_Click">
                <StackPanel>
                    <Image Source="/PlayerSkin/ButtonIcons/PreviousSongButtonIcon.png" />
                </StackPanel>
            </Button>
            <Button BorderThickness="0" Name="PlayButton" Width="70" Height="70"  Background="Transparent" Margin="269,146,279,382" Click="Stop_Play_ButtonClick">
                <StackPanel>
                    <Image Source="/PlayerSkin/ButtonIcons/PlayButtonIcon.png" />
                </StackPanel>
            </Button>
            <Button BorderThickness="0" Name="ForwardButton" Width="70" Height="70" Background="Transparent" BorderBrush="Black" Margin="377,146,171,382" Click="Forward_Button_Click">
                <StackPanel>
                    <Image Source="/PlayerSkin/ButtonIcons/NextSongButtonIcon.png" />
                </StackPanel>
            </Button>
            <Button BorderThickness="0" Name="StopButton" Width="70" Height="70" Background="Transparent" BorderBrush="Black" Margin="481,146,67,382" Click="Stop_Button_Click">
                <StackPanel>
                    <Image Source="/PlayerSkin/ButtonIcons/StopButtonIcon.png" />
                </StackPanel>
            </Button>
        </Grid>
        <TextBox IsReadOnly="True" BorderThickness="5" FontFamily="Consolas" FontWeight="UltraBold" FontStyle="Italic" VerticalContentAlignment="Center" TextAlignment="Center" Background="Gold" FontSize="45" Margin="0,10,0,589">Sound Wizard</TextBox>
        <ListBox Opacity="0.8" Background="DimGray" BorderBrush="Transparent" ScrollViewer.VerticalScrollBarVisibility="Visible" Name="Playlist" Margin="36,262,38,18" SelectionChanged="Playlist_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="FontWeight" Value="DemiBold"></Setter>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1}">
                                <Binding Path="Title" />
                                <Binding Path="Duration" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Slider Name="AudioSlider" Minimum="0" Maximum="1" Width="400" ValueChanged="Volume_ValueChanged" Margin="0,206,0,440" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="2" />
        <MediaElement Height="120" Margin="10,10,108,0" LoadedBehavior="Manual" Name="mediaElement1" VerticalAlignment="Top" />
    </Grid>
</Window>
