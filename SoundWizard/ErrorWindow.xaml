<Window x:Class="SoundWizard.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundWizard"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="125" Width="300">
    <Grid>
        <TextBlock x:Name="ErrorText" Margin="0,0,0,53" TextAlignment="Center">
            Invalid audio format.
        </TextBlock>
        <Button Click="CloseOnClick" Margin="62,54,62,10">
            <TextBlock>
                OK
            </TextBlock>
        </Button>
    </Grid>
</Window>